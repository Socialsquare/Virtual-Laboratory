                    "type": "TriggerType.MIX",
                    "container": "ContainerType.TUBE",
                    "liquids": [
                        { "type": "LiquidType.MICROORGANISM", "subtype": "MicroorganismType.YEAST" },
                        { "type": "LiquidType.ANTIBIOTIC", "subtype": "AntibioticType.B" },
                        { "type": "LiquidType.GROWTH_MEDIUM"}
                    ]
                }
            },

            {
                "description": { "dk": "Inkubér reagensglasset" },
                "trigger": {
                    "type": "TriggerType.ACTIVATION",
                    "activation": "ActivationType.INCUBATOR",
                    "containers": [
                        {
                            "type": "ContainerType.TUBE",
                            "liquids": [
                                { "type": "LiquidType.MICROORGANISM", "subtype": "MicroorganismType.YEAST" },
                                { "type": "LiquidType.ANTIBIOTIC", "subtype": "AntibioticType.B" },
                                { "type": "LiquidType.GROWTH_MEDIUM"}
                            ]
                        }
                    ]

                }
            },

            {
                "description": { "dk": "Brug en kanyle til at overføre indholdet fra reagensglasset til fermentoren" },
                "trigger": {
                    "type": "TriggerType.MIX",
                    "container": "ContainerType.FERMENTOR_TANK",
                    "liquids": [
                        { "type": "LiquidType.MICROORGANISM", "subtype": "MicroorganismType.YEAST" },
                        { "type": "LiquidType.ANTIBIOTIC", "subtype": "AntibioticType.B" },
                        { "type": "LiquidType.GROWTH_MEDIUM"}
                    ]

                }
            },

            {
                "description": { "dk": "Start en fermentering af gærcellerne, m. antibio-B" },
                "trigger": {
                    "type": "TriggerType.ACTIVATION",
                    "activation": "ActivationType.FERMENTOR",
                    "liquids": [
                        { "type": "LiquidType.MICROORGANISM", "subtype": "MicroorganismType.YEAST" },
                        { "type": "LiquidType.ANTIBIOTIC", "subtype": "AntibioticType.B"}
                    ]
                }
            },

            {
                "description": { "dk": "Oprens lipase fra din fermentering." },
                "trigger": {
                    "type": "TriggerType.ACQUIRE",
                    "item": "ContainerType.TUBE",
                    "liquids": [
                        { "type": "LiquidType.LIPASE_ENZYME"}
                    ]
                }
            },

            {
                "description": { "dk": "Test hvor effektivt lipase-enzymet er ved at tilføje det til vaskemaskinen. Prøv med forskellige koncentrationer for at finde den optimale dose." },
                "trigger": {
                    "type": "TriggerType.ACTIVATION",
                    "activation": "ActivationType.WASHING",
                    "liquids": [
                        { "type": "LiquidType.LIPASE_ENZYME" }
                    ]
                },
                "consequence": {
                    "type": "ConsequenceType.QUIZ",
                    "quiz": {
                        "id": 1,
                        "name": { "dk": "Enzym-kocentration" },
                        "question": { "dk": "Hvad er det optimale mht. koncentration af enzym og renligheden af skjorten?" },
                        "correct": 1,
                        "answers": [
                            {
                                "id": 0,
                                "answer": { "dk": "Så meget enzym som muligt, så skjørten er 110% ren!" },
                                "message": { "dk": "Det er ikke helt korrekt. Enzymer er dyre at producere" }
                            },
                            {
                                "id": 1,
                                "answer": { "dk": "Lige akkurat nok enzym til at tøjet bliver rent, men så heller ikke mere." },
                                "message": { "dk": "Ja, enzymer er dyre at producere, men selvfølgelig skal folks tøj også blive rent. Derfor er dette den optimale løsning." }
                            },
                            {
                                "id": 2,
                                "answer": { "dk": "Eftersom enzymer er dyre at producere, så bare nok til at tøjet bliver lidt renere, men ikke nødvendigvis helt." },
                                "message": { "dk": "Nej, det bliver folk næppe voldsomt glade for." }
                            }
                        ]
                    }
                }
            }
        ]
    },
