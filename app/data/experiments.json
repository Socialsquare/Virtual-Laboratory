                    "liquids": [
                        { "type": "LiquidType.MICROORGANISM", "subtype": "MicroorganismType.YEAST" },
                        { "type": "LiquidType.ANTIBIOTIC", "subtype": "AntibioticType.B" }
                    ]
                }
            },

            {
                "description": { "dk": "Inkubér petriskålen" },
