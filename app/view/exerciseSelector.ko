<h1>Vælg øvelse</h1>

<table>
    <thead>
        <tr><th>Tittel</th><th>Beskrivelse</th></tr>
    </thead>
    <tbody data-bind="foreach: exercises">
        <tr data-bind="click: $parent.select, css: { highlight: $parent.selected() === $data }">
            <td data-bind="text: title"></td>
            <td data-bind="text: description"></td>
        </tr>
    </tbody>
</table>

<br>
<div class="btn-row">
    <button data-bind="click: start, enable: selected">Vælg opgave</button>
</div>
